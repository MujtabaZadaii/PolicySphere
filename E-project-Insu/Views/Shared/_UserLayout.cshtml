<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PolicySphere</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.2/gsap.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.2/ScrollTrigger.min.js"></script>
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        black: '#000000',
                        accent: '#AC58E9',
                        darkbg: '#050505',
                        panel: '#0A0A0A',
                    },
                    fontFamily: {
                        sans: ['Inter', 'sans-serif'],
                        display: ['Oswald', 'sans-serif'],
                    },
                    animation: {
                        'pulse-slow': 'pulse 4s cubic-bezier(0.4, 0, 0.6, 1) infinite',
                        'blob': 'blob 7s infinite',
                    },
                    keyframes: {
                        blob: {
                            '0%': { transform: 'translate(0px, 0px) scale(1)' },
                            '33%': { transform: 'translate(30px, -50px) scale(1.1)' },
                            '66%': { transform: 'translate(-20px, 20px) scale(0.9)' },
                            '100%': { transform: 'translate(0px, 0px) scale(1)' },
                        }
                    }
                }
            }
        }
    </script>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600&family=Oswald:wght@500;700&display=swap" rel="stylesheet">
    <style>
        body { background-color: #000; color: white; }
        .sidebar-link.active { background-color: rgba(172, 88, 233, 0.1); color: #fff; border-right: 2px solid #AC58E9; }
        .sidebar-link:hover:not(.active) { background-color: rgba(255, 255, 255, 0.03); color: #fff; }
        
        /* Hide scrollbar for Chrome, Safari and Opera */
        ::-webkit-scrollbar {
            display: none;
        }
        /* Hide scrollbar for IE, Edge and Firefox */
        body, html, main, aside, nav {
            -ms-overflow-style: none;  /* IE and Edge */
            scrollbar-width: none;  /* Firefox */
        }
    </style>
</head>
<body class="antialiased bg-black text-gray-300 relative selection:bg-accent selection:text-white">
    
    <!-- Dynamic Background Glow -->
    <div class="fixed inset-0 z-0 overflow-hidden pointer-events-none">
        <div class="glow-blob absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[60vw] h-[60vw] bg-accent/10 rounded-full blur-[120px] opacity-40 mix-blend-screen animate-blob"></div>
    </div>

    <div class="min-h-screen relative z-10 flex flex-col">
        
        <!-- Top Navigation Bar (Crextio Style - Dark Mode Adaptation) -->
        <header class="w-full px-8 py-8 flex items-center justify-between pointer-events-none">
            
            <!-- Logo (Left) -->
            <div class="pointer-events-auto">
                <a asp-controller="Home" asp-action="Index" class="flex items-center gap-3">
                    <img src="~/logo/navbar logo.png" class="h-10 w-auto" alt="PolicySphere" />
                </a>
            </div>

            <!-- Central Pill Navigation (Floating) -->
            <nav class="hidden lg:flex items-center gap-1 bg-[#111]/80 backdrop-blur-xl border border-white/10 px-2 py-2 rounded-full shadow-2xl pointer-events-auto">
                <a asp-controller="User" asp-action="Dashboard" 
                   class="px-6 py-2.5 rounded-full text-sm font-medium transition-all duration-300 @(ViewContext.RouteData.Values["Action"]?.ToString() == "Dashboard" ? "bg-white text-black shadow-[0_0_20px_rgba(255,255,255,0.3)]" : "text-gray-400 hover:text-white hover:bg-white/5")">
                    Dashboard
                </a>
                <a asp-controller="User" asp-action="Policies" 
                   class="px-6 py-2.5 rounded-full text-sm font-medium transition-all duration-300 @(ViewContext.RouteData.Values["Action"]?.ToString() == "Policies" ? "bg-white text-black shadow-[0_0_20px_rgba(255,255,255,0.3)]" : "text-gray-400 hover:text-white hover:bg-white/5")">
                    Coverage
                </a>

                <a asp-controller="User" asp-action="CalculatePremium" 
                   class="px-6 py-2.5 rounded-full text-sm font-medium transition-all duration-300 @(ViewContext.RouteData.Values["Action"]?.ToString() == "CalculatePremium" ? "bg-white text-black shadow-[0_0_20px_rgba(255,255,255,0.3)]" : "text-gray-400 hover:text-white hover:bg-white/5")">
                    Calculator
                </a>
                <a asp-controller="User" asp-action="Loans" 
                   class="px-6 py-2.5 rounded-full text-sm font-medium transition-all duration-300 @(ViewContext.RouteData.Values["Action"]?.ToString() == "Loans" ? "bg-white text-black shadow-[0_0_20px_rgba(255,255,255,0.3)]" : "text-gray-400 hover:text-white hover:bg-white/5")">
                    Loans
                </a>
                <a asp-controller="User" asp-action="PaymentHistory" 
                   class="px-6 py-2.5 rounded-full text-sm font-medium transition-all duration-300 @(ViewContext.RouteData.Values["Action"]?.ToString() == "PaymentHistory" ? "bg-white text-black shadow-[0_0_20px_rgba(255,255,255,0.3)]" : "text-gray-400 hover:text-white hover:bg-white/5")">
                   History
                </a>
            </nav>

            <!-- Right Utilities -->
            <div class="flex items-center gap-3 pointer-events-auto">
                <!-- Go to Website Button -->
                <a asp-controller="Home" asp-action="Index" class="flex items-center gap-2 px-5 py-2.5 rounded-full bg-accent/10 border border-accent/20 text-accent hover:bg-accent/20 hover:text-white transition-colors">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path></svg>
                    <span class="text-sm font-medium">Home</span>
                </a>

                <!-- Settings Pill -->
                <a asp-controller="User" asp-action="Settings" class="flex items-center gap-2 px-5 py-2.5 rounded-full bg-[#111]/80 border border-white/10 text-gray-300 hover:text-white hover:bg-white/10 transition-colors">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"></path><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path></svg>
                    <span class="text-sm font-medium">Setting</span>
                </a>

                <!-- Profile Circle -->
                <a asp-controller="User" asp-action="Logout" class="w-12 h-12 rounded-full bg-[#111]/80 border border-white/10 flex items-center justify-center text-gray-300 hover:text-white hover:border-white/30 transition-colors" title="Logout">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path></svg>
                </a>
            </div>
        </header>

        <!-- Main Content -->
        <main class="flex-1 w-full max-w-[1920px] mx-auto relative z-10">
            @RenderBody()
        </main>
    </div>
    <script src="https://cdn.jsdelivr.net/gh/alpinejs/alpine@v2.8.2/dist/alpine.min.js" defer></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
