@{
    ViewData["Title"] = "About Us";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- About Us Page - Premium Cinematic Design -->
<div class="relative w-full min-h-screen bg-black text-white pt-32 pb-20 overflow-hidden">
    
    <!-- Hero Section -->
    <div class="max-w-7xl mx-auto px-6 mb-32 relative z-10">
        <div class="text-center opacity-0 reveal-header">
            <span class="text-accent font-mono text-xs uppercase tracking-[0.2em] mb-4 inline-block">
                Who We Are
            </span>
            <h1 class="font-display font-bold text-5xl sm:text-7xl text-white mb-6 tracking-tight">
                Redefining <span class="text-accent">Protection</span>
            </h1>
            <div class="h-px w-32 bg-accent/50 mx-auto mb-8"></div>
            <p class="text-gray-400 text-lg max-w-3xl mx-auto font-light leading-relaxed">
                PolicySphere is not just an insurance provider; we are architects of security in an unpredictable world. 
                Born from a vision to make coverage transparent, accessible, and dignified, we leverage cutting-edge 
                technology to provide policies that truly understand your life's value.
            </p>
        </div>
    </div>

    <!-- Vision & Mission Grid -->
    <div class="max-w-7xl mx-auto px-6 mb-32">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-12">
            
            <!-- Vision -->
            <div class="bg-[#0A0A0A] border border-white/5 p-10 rounded-2xl opacity-0 reveal-card hover:border-accent/30 transition-all duration-500">
                <div class="w-16 h-16 rounded-full bg-accent/10 flex items-center justify-center mb-8">
                    <svg class="w-8 h-8 text-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path></svg>
                </div>
                <h3 class="font-display text-3xl text-white mb-4">Our Vision</h3>
                <p class="text-gray-400 leading-relaxed font-light">
                    To create a world where uncertainty doesn't hinder progress. We envision a future where every individual 
                    has the safety net they need to chase their dreams without fear, supported by a system that is 
                    as human as it is digital.
                </p>
            </div>

            <!-- Mission -->
            <div class="bg-[#0A0A0A] border border-white/5 p-10 rounded-2xl opacity-0 reveal-card hover:border-accent/30 transition-all duration-500 delay-100">
                <div class="w-16 h-16 rounded-full bg-accent/10 flex items-center justify-center mb-8">
                    <svg class="w-8 h-8 text-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M19.428 15.428a2 2 0 00-1.022-.547l-2.384-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z"></path></svg>
                </div>
                <h3 class="font-display text-3xl text-white mb-4">Our Mission</h3>
                <p class="text-gray-400 leading-relaxed font-light">
                    To simplify insurance through innovation. We strive to eliminate the complexities of traditional 
                    coverage, offering straightforward, tailored solutions that adapt to your changing life stages, 
                    backed by rapid response and unwavering integrity.
                </p>
            </div>

        </div>
    </div>

    <!-- Stats Section -->
    <div class="w-full bg-white/5 border-y border-white/10 py-20 mb-32 opacity-0 reveal-section">
        <div class="max-w-7xl mx-auto px-6 grid grid-cols-2 md:grid-cols-4 gap-12 text-center">
            <div>
                <h4 class="font-display text-5xl font-bold text-white mb-2">5+</h4>
                <p class="text-xs uppercase tracking-widest text-accent">Years Active</p>
            </div>
            <div>
                <h4 class="font-display text-5xl font-bold text-white mb-2">10k+</h4>
                <p class="text-xs uppercase tracking-widest text-accent">Lives Insured</p>
            </div>
            <div>
                <h4 class="font-display text-5xl font-bold text-white mb-2">98%</h4>
                <p class="text-xs uppercase tracking-widest text-accent">Claim Ratio</p>
            </div>
            <div>
                <h4 class="font-display text-5xl font-bold text-white mb-2">24/7</h4>
                <p class="text-xs uppercase tracking-widest text-accent">Support</p>
            </div>
        </div>
    </div>

    <!-- CTA -->
    <div class="max-w-4xl mx-auto text-center opacity-0 reveal-section">
        <h2 class="font-display text-4xl text-white mb-8">Ready to secure your future?</h2>
        <a asp-action="Index" asp-controller="Schemes" class="inline-block px-8 py-4 bg-accent text-black font-bold rounded-full hover:bg-white transition-all transform hover:scale-105 shadow-[0_0_20px_rgba(172,88,233,0.4)]">
            Explore Our Schemes
        </a>
    </div>

</div>

<script>
    document.addEventListener("DOMContentLoaded", function() {
        gsap.to(".reveal-header", { opacity: 1, y: 0, duration: 1, ease: "power3.out" });
        
        gsap.utils.toArray(".reveal-card").forEach((card, i) => {
            gsap.to(card, {
                scrollTrigger: {
                    trigger: card,
                    start: "top 85%",
                },
                opacity: 1,
                y: 0,
                duration: 0.8,
                delay: i * 0.1,
                ease: "power3.out"
            });
        });

        gsap.utils.toArray(".reveal-section").forEach((section) => {
            gsap.to(section, {
                scrollTrigger: {
                    trigger: section,
                    start: "top 80%",
                },
                opacity: 1,
                y: 0,
                duration: 1,
                ease: "power3.out"
            });
        });
    });
</script>
