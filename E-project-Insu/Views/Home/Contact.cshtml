@{
    ViewData["Title"] = "Contact";
}

<div class="min-h-screen w-full flex flex-col justify-center relative overflow-hidden pt-24 pb-12">
    <!-- Background Decor -->
    <div class="absolute inset-0 pointer-events-none z-0">
         <div class="absolute top-1/4 left-1/4 w-[500px] h-[500px] bg-accent/5 rounded-full blur-[100px] opacity-30 animate-pulse-slow"></div>
         <div class="absolute bottom-1/3 right-1/4 w-[400px] h-[400px] bg-purple-900/10 rounded-full blur-[80px] opacity-20"></div>
    </div>

    <div class="container mx-auto px-6 relative z-10 max-w-6xl">
        
        <!-- Page Intro -->
        <div class="mb-16 md:mb-24 opacity-0 intro-section">
            <h1 class="text-4xl md:text-6xl font-display font-bold tracking-tight text-white mb-4">
                Let’s Talk
            </h1>
            <p class="text-lg md:text-xl text-gray-400 font-light max-w-lg leading-relaxed">
                Reach out to PolicySphere for support, guidance, or general inquiries.
            </p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-12 lg:gap-24 items-start">
            
            <!-- Left Side: Trust Panel -->
            <div class="opacity-0 translate-y-8 trust-panel md:sticky md:top-32">
                <div class="border-l border-accent/20 pl-8 py-2">
                    <p class="text-2xl md:text-3xl font-serif text-white/90 leading-tight mb-8">
                        "We believe insurance conversations should feel clear, calm, and human."
                    </p>
                    <p class="text-sm text-gray-500 tracking-wide font-mono uppercase">
                        Our team responds thoughtfully to every message.
                    </p>
                </div>

                <div class="mt-16 space-y-8">
                    <div class="flex items-start gap-4 text-gray-400 group hover:text-white transition-colors duration-300">
                        <div class="w-5 h-5 mt-1 rounded-full border border-gray-600 group-hover:border-accent flex items-center justify-center transition-colors">
                            <div class="w-1 h-1 bg-current rounded-full"></div>
                        </div>
                        <div>
                            <span class="block text-xs uppercase tracking-wider text-gray-500 mb-1">Email Support</span>
                            <span class="text-lg font-light">support@policysphere.com</span>
                        </div>
                    </div>
                    
                    <div class="flex items-start gap-4 text-gray-400 group hover:text-white transition-colors duration-300">
                         <div class="w-5 h-5 mt-1 rounded-full border border-gray-600 group-hover:border-accent flex items-center justify-center transition-colors">
                            <div class="w-1 h-1 bg-current rounded-full"></div>
                        </div>
                        <div>
                            <span class="block text-xs uppercase tracking-wider text-gray-500 mb-1">Hours</span>
                            <span class="text-lg font-light">Monday – Friday, 9am – 6pm</span>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Right Side: Interaction Panel (Form) -->
            <div class="relative opacity-0 translate-y-8 contact-form-container">
                <!-- Form Wrapper -->
                <div class="relative bg-white/0 backdrop-blur-sm border border-white/5 p-8 md:p-12 rounded-2xl shadow-[0_0_40px_rgba(0,0,0,0.2)]">
                    
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="mb-6 border-l-4 border-green-500 bg-green-500/10 p-4 text-green-200">
                             <p class="font-bold">Message Sent!</p>
                             <p class="text-sm">@TempData["SuccessMessage"]</p>
                        </div>
                    }

                    <form asp-action="Contact" method="post" class="space-y-8">
                        
                        <!-- Full Name -->
                        <div class="group relative">
                            <input type="text" name="Name" id="name" required
                                class="peer w-full bg-transparent border-b border-gray-700 text-white pb-2 pt-6 focus:outline-none focus:border-accent transition-colors duration-300 placeholder-transparent"
                                placeholder="Full Name" />
                            <label for="name" 
                                class="absolute left-0 top-6 text-gray-500 text-sm transition-all duration-300 
                                       peer-placeholder-shown:text-base peer-placeholder-shown:top-6 peer-placeholder-shown:text-gray-500
                                       peer-focus:-top-0 peer-focus:text-xs peer-focus:text-accent peer-valid:-top-0 peer-valid:text-xs peer-valid:text-gray-400">
                                Full Name
                            </label>
                        </div>

                         <!-- Email -->
                        <div class="group relative">
                            <input type="email" name="Email" id="email" required
                                class="peer w-full bg-transparent border-b border-gray-700 text-white pb-2 pt-6 focus:outline-none focus:border-accent transition-colors duration-300 placeholder-transparent"
                                placeholder="Email Address" />
                            <label for="email" 
                                class="absolute left-0 top-6 text-gray-500 text-sm transition-all duration-300 
                                       peer-placeholder-shown:text-base peer-placeholder-shown:top-6 peer-placeholder-shown:text-gray-500
                                       peer-focus:-top-0 peer-focus:text-xs peer-focus:text-accent peer-valid:-top-0 peer-valid:text-xs peer-valid:text-gray-400">
                                Email Address
                            </label>
                        </div>

                        <!-- Subject -->
                        <div class="group relative">
                             <select name="Subject" id="subject" required
                                class="peer w-full bg-transparent border-b border-gray-700 text-white pb-2 pt-6 focus:outline-none focus:border-accent transition-colors duration-300 appearance-none">
                                <option value="" disabled selected class="bg-black text-gray-500">Select a Subject</option>
                                <option value="Technical Support" class="bg-black">Technical Support</option>
                                <option value="File a Claim" class="bg-black">File a Claim</option>
                                <option value="General Inquiry" class="bg-black">General Inquiry</option>
                            </select>
                            <label for="subject" 
                                class="absolute left-0 -top-0 text-xs text-gray-400 transition-all duration-300">
                                Subject
                            </label>
                            <div class="absolute right-2 top-6 pointer-events-none text-gray-500">
                                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path></svg>
                            </div>
                        </div>

                        <!-- Message -->
                        <div class="group relative">
                            <textarea name="Message" id="message" rows="4" required
                                class="peer w-full bg-transparent border-b border-gray-700 text-white pb-2 pt-6 focus:outline-none focus:border-accent transition-colors duration-300 placeholder-transparent resize-none"
                                placeholder="Your Message"></textarea>
                            <label for="message" 
                                class="absolute left-0 top-6 text-gray-500 text-sm transition-all duration-300 
                                       peer-placeholder-shown:text-base peer-placeholder-shown:top-6 peer-placeholder-shown:text-gray-500
                                       peer-focus:-top-0 peer-focus:text-xs peer-focus:text-accent peer-valid:-top-0 peer-valid:text-xs peer-valid:text-gray-400">
                                Message
                            </label>
                        </div>

                        <!-- Submit Button -->
                        <div class="pt-4" id="submitButtonContainer">
                            <button type="submit" 
                                class="group flex items-center gap-3 text-lg font-medium text-white hover:text-accent transition-colors duration-300">
                                Send Message
                                <span class="text-2xl transition-transform duration-300 group-hover:translate-x-2">→</span>
                            </button>
                        </div>
                    </form>
                </div>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", function() {
            // GSAP Animations
            
            // 1. Intro Fade Up
            gsap.to(".intro-section", {
                opacity: 1,
                y: 0,
                duration: 0.8,
                ease: "power2.out",
                delay: 0.2
            });

            // 2. Trust Panel Fade In + Slide
            gsap.to(".trust-panel", {
                opacity: 1,
                y: 0,
                duration: 0.8,
                ease: "power2.out",
                delay: 0.4
            });

            // 3. Form Fade In + Slide
            gsap.to(".contact-form-container", {
                opacity: 1,
                y: 0,
                duration: 0.8,
                ease: "power2.out",
                delay: 0.6
            });
        });
    </script>
}
