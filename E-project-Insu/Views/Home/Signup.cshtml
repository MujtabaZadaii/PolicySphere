@{
    ViewData["Title"] = "Sign Up";
}

<div class="min-h-screen w-full bg-black text-white px-6 sm:px-12 lg:px-24 pt-40 pb-20">
    <div class="w-full max-w-sm fade-in">
        <h1 class="font-display text-4xl font-medium mb-3 text-white">Create your PolicySphere account.</h1>
        <p class="text-gray-500 mb-12 text-sm leading-relaxed font-light">
            Register once to manage your coverage securely.
        </p>

        @if (ViewBag.Error != null)
        {
            <div class="mb-6 bg-red-500/10 border border-red-500/20 text-red-400 px-4 py-3 rounded text-xs tracking-wide">
                @ViewBag.Error
            </div>
        }

        <form asp-action="Signup" method="post" class="flex flex-col gap-10">
            <div class="flex flex-col gap-2">
                <label for="FirstName" class="text-[10px] uppercase tracking-[0.2em] text-gray-500 font-semibold">First Name</label>
                <input type="text" id="FirstName" name="FirstName" class="bg-transparent border-b border-white/20 py-3 text-white focus:outline-none focus:border-white transition-colors duration-300 placeholder-transparent font-light" required />
            </div>
            
            <div class="flex flex-col gap-2">
                <label for="LastName" class="text-[10px] uppercase tracking-[0.2em] text-gray-500 font-semibold">Last Name</label>
                <input type="text" id="LastName" name="LastName" class="bg-transparent border-b border-white/20 py-3 text-white focus:outline-none focus:border-white transition-colors duration-300 placeholder-transparent font-light" required />
            </div>

            <div class="flex flex-col gap-2">
                <label for="Email" class="text-[10px] uppercase tracking-[0.2em] text-gray-500 font-semibold">Email Address</label>
                <input type="email" id="Email" name="Email" class="bg-transparent border-b border-white/20 py-3 text-white focus:outline-none focus:border-white transition-colors duration-300 placeholder-transparent font-light" required />
            </div>

            <div class="flex flex-col gap-2">
                <label for="Password" class="text-[10px] uppercase tracking-[0.2em] text-gray-500 font-semibold">Password</label>
                <input type="password" id="Password" name="Password" class="bg-transparent border-b border-white/20 py-3 text-white focus:outline-none focus:border-white transition-colors duration-300 placeholder-transparent font-light" required />
            </div>

            <div class="pt-6">
                <button type="submit" class="bg-white text-black font-medium py-3 px-10 text-xs uppercase tracking-widest hover:bg-gray-200 transition-colors duration-300">
                    Create account
                </button>
            </div>

            <div class="mt-8 opacity-80">
                <p class="text-xs text-gray-500">
                    Already have an account? <a asp-action="Login" asp-controller="Home" class="text-white hover:text-gray-300 transition-all duration-300 ml-1 underline underline-offset-4 decoration-white/30 hover:decoration-white">Log in</a>
                </p>
            </div>
        </form>
    </div>
</div>

<style>
    .fade-in {
        animation: fadeIn 0.6s ease-out forwards;
        opacity: 0;
    }
    @@keyframes fadeIn {
        from { opacity: 0; }
        to { opacity: 1; }
    }
</style>
