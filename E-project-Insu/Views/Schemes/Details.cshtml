@model E_project_Insu.Models.Scheme

@{
    ViewData["Title"] = Model.SchemeName;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Scheme Details Page -->
<div class="relative w-full min-h-screen bg-black text-white py-32 px-6">
    
    <div class="max-w-5xl mx-auto">
        
        <!-- Back Button -->
        <a href="@Url.Action("Index", "Schemes")" class="inline-flex items-center gap-2 text-gray-400 hover:text-accent transition-colors mb-12 opacity-0 reveal-back">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path></svg>
            Back to All Schemes
        </a>

        <!-- Scheme Header -->
        <div class="mb-16 opacity-0 reveal-header">
            <div class="inline-block px-4 py-2 rounded-full bg-accent/10 border border-accent/30 text-accent text-xs uppercase tracking-wider font-medium mb-6">
                @Model.InsuranceType Insurance
            </div>
            <h1 class="font-display font-bold text-5xl sm:text-6xl text-white mb-6 tracking-tight leading-tight">
                @Model.SchemeName
            </h1>
            <div class="h-1 w-24 bg-accent/50 mb-8"></div>
        </div>

        <!-- Main Content Grid -->
        <div class="grid grid-cols-1 lg:grid-cols-3 gap-12">
            
            <!-- Left Column: Details -->
            <div class="lg:col-span-2 space-y-12">
                
                <!-- Description Section -->
                <div class="opacity-0 reveal-section">
                    <h2 class="font-display text-2xl font-bold text-white mb-4 flex items-center gap-3">
                        <span class="w-2 h-2 rounded-full bg-accent"></span>
                        Overview
                    </h2>
                    <div class="bg-white/5 backdrop-blur-sm border border-white/10 rounded-2xl p-8">
                        <p class="text-gray-300 text-lg leading-relaxed">
                            @Model.Description
                        </p>
                    </div>
                </div>

                <!-- Eligibility Section -->
                <div class="opacity-0 reveal-section">
                    <h2 class="font-display text-2xl font-bold text-white mb-4 flex items-center gap-3">
                        <span class="w-2 h-2 rounded-full bg-accent"></span>
                        Eligibility Criteria
                    </h2>
                    <div class="bg-white/5 backdrop-blur-sm border border-white/10 rounded-2xl p-8">
                        <p class="text-gray-300 text-base leading-relaxed">
                            @Model.Eligibility
                        </p>
                    </div>
                </div>

            </div>

            <!-- Right Column: Quick Info -->
            <div class="lg:col-span-1">
                <div class="sticky top-32 space-y-6 opacity-0 reveal-sidebar">
                    
                    <!-- Info Card -->
                    <div class="bg-gradient-to-br from-accent/10 to-purple-900/10 backdrop-blur-sm border border-accent/20 rounded-2xl p-8">
                        <h3 class="font-display text-xl font-bold text-white mb-6">Scheme Information</h3>
                        
                        <div class="space-y-4">
                            <div class="pb-4 border-b border-white/10">
                                <span class="text-xs uppercase tracking-wider text-gray-500 block mb-2">Insurance Type</span>
                                <span class="text-white font-medium">@Model.InsuranceType</span>
                            </div>
                            
                            <div class="pb-4 border-b border-white/10">
                                <span class="text-xs uppercase tracking-wider text-gray-500 block mb-2">Status</span>
                                <span class="inline-flex items-center gap-2 px-3 py-1 rounded-full bg-green-500/10 text-green-500 border border-green-500/20 text-xs font-bold uppercase">
                                    <span class="w-1.5 h-1.5 rounded-full bg-green-500"></span>
                                    @Model.Status
                                </span>
                            </div>
                            
                            <div>
                                <span class="text-xs uppercase tracking-wider text-gray-500 block mb-2">Listed Since</span>
                                <span class="text-white font-medium">@Model.CreatedDate.ToString("MMMM yyyy")</span>
                            </div>
                        </div>
                    </div>

                    <!-- CTA Card -->
                    <div class="bg-white/5 backdrop-blur-sm border border-white/10 rounded-2xl p-8 text-center">
                        <p class="text-gray-400 text-sm mb-6">
                            Interested in this scheme? Contact our team for personalized assistance.
                        </p>
                        <a href="@Url.Action("Contact", "Home")" class="block w-full px-6 py-3 bg-accent text-white font-medium rounded-full hover:bg-accent/80 transition-colors">
                            Get in Touch
                        </a>
                    </div>

                </div>
            </div>

        </div>

    </div>
</div>

<script>
    document.addEventListener("DOMContentLoaded", function() {
        gsap.to(".reveal-back", { opacity: 1, x: 0, duration: 0.8, ease: "power3.out" });
        gsap.to(".reveal-header", { opacity: 1, y: 0, duration: 1, delay: 0.2, ease: "power3.out" });
        
        gsap.utils.toArray(".reveal-section").forEach((section, i) => {
            gsap.to(section, {
                opacity: 1,
                y: 0,
                duration: 1,
                delay: 0.4 + (i * 0.2),
                ease: "power3.out"
            });
        });

        gsap.to(".reveal-sidebar", { opacity: 1, x: 0, duration: 1, delay: 0.6, ease: "power3.out" });
    });
</script>
