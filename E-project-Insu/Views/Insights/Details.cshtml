@model E_project_Insu.Models.Insight

@{
    ViewData["Title"] = Model.Title;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Article Hero -->
<div class="relative w-full h-[60vh] min-h-[400px] overflow-hidden">
    @if (!string.IsNullOrEmpty(Model.ImageUrl))
    {
        <img src="@Model.ImageUrl" class="absolute inset-0 w-full h-full object-cover" alt="@Model.Title">
    }
    else
    {
        <div class="absolute inset-0 bg-gradient-to-br from-gray-900 to-black"></div>
    }
    <div class="absolute inset-0 bg-gradient-to-t from-black via-black/50 to-transparent"></div>

    <div class="absolute bottom-0 left-0 w-full p-6 md:p-12 lg:p-24 z-10">
        <div class="max-w-[90rem] mx-auto">
             <span class="inline-block bg-accent px-3 py-1 text-xs font-bold uppercase tracking-widest text-white mb-6 rounded-sm">@Model.Category</span>
             <h1 class="font-display font-medium text-4xl md:text-6xl lg:text-7xl text-white max-w-4xl leading-tight mb-6">
                 @Model.Title
             </h1>
             <div class="flex items-center gap-4 text-gray-400 font-mono text-sm">
                 <span>@Model.PublishedDate.ToString("MMMM dd, yyyy")</span>
                 <span>•</span>
                 <span>PolicySphere Team</span>
             </div>
        </div>
    </div>
</div>

<!-- content -->
<div class="w-full bg-black py-24 px-6 md:px-12">
    <div class="max-w-4xl mx-auto prose prose-invert prose-lg">
        <div class="text-gray-300 font-light leading-relaxed whitespace-pre-line">
            @Model.Content
        </div>

        <div class="mt-16 pt-8 border-t border-white/10 flex justify-between items-center">
            <a href="@Url.Action("Index", "Insights")" class="text-gray-500 hover:text-white transition-colors text-sm uppercase tracking-widest font-bold">
                ← Back to Insights
            </a>
            
            <div class="flex gap-4">
                 <!-- Share buttons placeholder -->
                 <span class="text-gray-600 text-sm">Share this article</span>
            </div>
        </div>
    </div>
</div>
