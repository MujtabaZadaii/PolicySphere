@model IEnumerable<E_project_Insu.Models.Insight>

@{
    ViewData["Title"] = "Insights & Updates";
    // Assuming a Layout or generic page structure
    Layout = "~/Views/Shared/_Layout.cshtml"; // Or standard layout
}

<div class="relative w-full min-h-screen bg-black pt-32 pb-24">
    
    <!-- Header -->
    <div class="max-w-[90rem] mx-auto px-6 mb-24 text-center">
        <h1 class="font-display font-bold text-5xl sm:text-7xl text-white mb-6 tracking-tight">
            Insights <span class="text-gray-600">&</span> Updates
        </h1>
        <div class="h-1 w-24 bg-accent/50 mx-auto mb-8"></div>
        <p class="text-xl text-gray-400 font-light max-w-2xl mx-auto leading-relaxed">
            Stay informed with the latest news, policy updates, and expert advice from the PolicySphere team.
        </p>
    </div>

    <!-- Grid -->
    <div class="max-w-[90rem] mx-auto px-6 grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        
        @if (Model != null && Model.Any())
        {
            @foreach (var insight in Model)
            {
                <div class="group relative flex flex-col h-full bg-white/5 border border-white/10 rounded-2xl overflow-hidden hover:border-white/20 transition-all duration-500">
                    
                    <!-- Image -->
                    <div class="relative aspect-[16/9] overflow-hidden">
                        @if (!string.IsNullOrEmpty(insight.ImageUrl))
                        {
                            <img src="@insight.ImageUrl" class="absolute inset-0 w-full h-full object-cover transition-transform duration-700 group-hover:scale-105 opacity-80 group-hover:opacity-100" alt="@insight.Title">
                        }
                        else
                        {
                            <div class="absolute inset-0 bg-gradient-to-br from-gray-800 to-black"></div>
                        }
                        <div class="absolute inset-0 bg-black/20 group-hover:bg-transparent transition-colors duration-500"></div>
                        
                        <!-- Date Badge -->
                        <div class="absolute top-4 right-4 bg-black/60 backdrop-blur-md px-3 py-1 rounded-full border border-white/10">
                            <span class="text-xs font-mono text-gray-300">@insight.PublishedDate.ToString("MMM dd, yyyy")</span>
                        </div>
                    </div>

                    <!-- Content -->
                    <div class="p-8 flex flex-col flex-1">
                        <div class="mb-4">
                            <span class="text-accent text-[10px] uppercase tracking-widest font-mono border border-accent/20 px-2 py-1 rounded bg-accent/5">@insight.Category</span>
                        </div>
                        
                        <h3 class="font-display text-2xl text-white mb-4 leading-tight group-hover:text-accent transition-colors duration-300">
                            @insight.Title
                        </h3>
                        
                        <p class="text-gray-400 font-light text-sm leading-relaxed mb-6 line-clamp-3 flex-1">
                            @insight.Content
                        </p>

                        <a href="@Url.Action("Details", "Insights", new { id = insight.InsightId })" class="inline-flex items-center text-xs font-bold uppercase tracking-widest text-white hover:text-accent transition-colors group/link mt-auto">
                            Read Article
                            <span class="ml-2 transform group-hover/link:translate-x-1 transition-transform duration-300">â†’</span>
                        </a>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-span-full text-center py-20">
                <p class="text-gray-500 text-lg">No insights available at the moment.</p>
            </div>
        }

    </div>
</div>
