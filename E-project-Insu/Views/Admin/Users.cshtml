@model IEnumerable<E_project_Insu.Models.User>

@{
    ViewData["Title"] = "Manage Users";
}

<div class="p-8">
    <div class="flex items-center justify-between mb-8">
        <div>
            <h1 class="text-3xl font-display font-bold text-white mb-2">Registered Users</h1>
            <p class="text-gray-400">View user details and account status.</p>
        </div>
        <div class="text-sm text-gray-500">
            Total Users: <span class="text-white font-bold">@Model.Count()</span>
        </div>
    </div>

    <!-- Table -->
    <div class="bg-panel border border-white/10 rounded-2xl overflow-hidden">
        <div class="overflow-x-auto">
            <table class="w-full text-left">
                <thead>
                    <tr class="bg-white/5 border-b border-white/10 text-gray-400 text-xs uppercase tracking-wider">
                        <th class="p-6 font-medium">User ID</th>
                        <th class="p-6 font-medium">Full Name</th>
                        <th class="p-6 font-medium">Email</th>
                        <th class="p-6 font-medium">Role</th>
                        <th class="p-6 font-medium">Policies Held</th>
                        <th class="p-6 font-medium">Joined Date</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-white/5">
                    @foreach (var user in Model)
                    {
                        <tr class="hover:bg-white/5 transition-colors group">
                            <td class="p-6 text-gray-500">#@user.UserId</td>
                            <td class="p-6 text-white font-medium">@user.FirstName @user.LastName</td>
                            <td class="p-6 text-gray-300">@user.Email</td>
                            <td class="p-6">
                                <span class="px-3 py-1 rounded-full text-xs font-medium border border-white/10 
                                      @(user.Role == "Admin" ? "bg-red-500/10 text-red-400 border-red-500/20" : "bg-accent/10 text-accent border-accent/20")">
                                    @user.Role
                                </span>
                            </td>
                            <td class="p-6">
                                <span class="bg-white/10 text-white px-2 py-1 rounded text-xs font-bold">@user.Policies.Count</span>
                            </td>
                            <td class="p-6 text-gray-400 text-sm">@user.CreatedDate.ToString("MMM dd, yyyy")</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        @if (!Model.Any())
        {
            <div class="p-12 text-center text-gray-500">
                No users found.
            </div>
        }
    </div>
</div>
