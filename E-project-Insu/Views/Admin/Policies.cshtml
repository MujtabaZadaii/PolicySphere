@model IEnumerable<E_project_Insu.Models.Policy>

@{
    ViewData["Title"] = "Manage Policies";
}

<div class="p-8">
    <div class="flex items-center justify-between mb-8">
        <div>
            <h1 class="text-3xl font-display font-bold text-white mb-2">Policies</h1>
            <p class="text-gray-400">View and manage all insurance policies.</p>
        </div>
        <a asp-action="AddPolicy" class="bg-accent hover:bg-opacity-90 text-white px-6 py-3 rounded-lg font-medium transition-all shadow-[0_0_20px_rgba(172,88,233,0.3)] hover:shadow-[0_0_30px_rgba(172,88,233,0.5)] flex items-center">
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path></svg>
            Add Policy
        </a>
    </div>

    <!-- Table -->
    <div class="bg-panel border border-white/10 rounded-2xl overflow-hidden">
        <div class="overflow-x-auto">
            <table class="w-full text-left">
                <thead>
                    <tr class="bg-white/5 border-b border-white/10 text-gray-400 text-xs uppercase tracking-wider">
                        <th class="p-6 font-medium">Policy ID</th>
                        <th class="p-6 font-medium">User</th>
                        <th class="p-6 font-medium">Type</th>
                        <th class="p-6 font-medium">Number</th>
                        <th class="p-6 font-medium">Amount</th>
                        <th class="p-6 font-medium">Status</th>
                        <th class="p-6 font-medium">Actions</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-white/5">
                    @foreach (var policy in Model)
                    {
                        <tr class="hover:bg-white/5 transition-colors">
                            <td class="p-6 text-gray-300">#@policy.PolicyId</td>
                            <td class="p-6 text-white font-medium">
                                <div class="flex flex-col">
                                    <span>@policy.User?.FirstName @policy.User?.LastName</span>
                                    <span class="text-xs text-gray-500">@policy.User?.Email</span>
                                </div>
                            </td>
                            <td class="p-6">
                                <span class="px-3 py-1 rounded-full text-xs font-medium border border-white/10
                                      @(policy.PolicyType == "Life" ? "bg-blue-500/10 text-blue-400 border-blue-500/20" : 
                                        policy.PolicyType == "Medical" ? "bg-green-500/10 text-green-400 border-green-500/20" :
                                        policy.PolicyType == "Motor" ? "bg-yellow-500/10 text-yellow-400 border-yellow-500/20" :
                                        "bg-purple-500/10 text-purple-400 border-purple-500/20")">
                                    @policy.PolicyType
                                </span>
                            </td>
                            <td class="p-6 text-gray-300 font-mono text-sm">@policy.PolicyNumber</td>
                            <td class="p-6 text-gray-300">@policy.CoverageAmount.ToString("C")</td>
                            <td class="p-6">
                                <span class="flex items-center text-sm @(policy.Status == "Active" ? "text-green-400" : policy.Status == "Pending" ? "text-yellow-400" : "text-red-400")">
                                    <span class="w-2 h-2 rounded-full mr-2 @(policy.Status == "Active" ? "bg-green-500" : policy.Status == "Pending" ? "bg-yellow-500" : "bg-red-500")"></span>
                                    @policy.Status
                                </span>
                            </td>
                            <td class="p-6">
                                <div class="flex items-center gap-3">
                                    @if (policy.Status == "Pending")
                                    {
                                        <a asp-action="ApprovePolicy" asp-route-id="@policy.PolicyId" class="text-green-400 hover:text-green-300 transition-colors text-sm font-medium">Approve</a>
                                        <a asp-action="RejectPolicy" asp-route-id="@policy.PolicyId" class="text-red-400 hover:text-red-300 transition-colors text-sm font-medium">Reject</a>
                                    }
                                    <a asp-action="EditPolicy" asp-route-id="@policy.PolicyId" class="text-accent hover:text-white transition-colors text-sm font-medium">Edit</a>
                                    <a asp-action="DeletePolicy" asp-route-id="@policy.PolicyId" class="text-gray-500 hover:text-red-400 transition-colors text-sm font-medium" onclick="return confirm('Are you sure you want to delete this policy?');">Delete</a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        @if (!Model.Any())
        {
            <div class="p-12 text-center text-gray-500">
                No policies found.
            </div>
        }
    </div>
</div>
