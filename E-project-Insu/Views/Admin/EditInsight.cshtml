@model E_project_Insu.Models.Insight

@{
    ViewData["Title"] = "Edit Insight";
}

<div class="p-8 max-w-2xl mx-auto">
    <div class="mb-8">
        <a asp-action="Insights" class="text-gray-400 hover:text-white mb-4 block">&larr; Back to Insights</a>
        <h1 class="text-3xl font-display font-bold text-white mb-2">Edit Insight</h1>
        <p class="text-gray-400">Update article details.</p>
    </div>

    <form asp-action="EditInsight" method="post" class="space-y-6">
        <input type="hidden" asp-for="InsightId" />
        <input type="hidden" asp-for="PublishedDate" /> <!-- Preserve original date -->

        <div class="bg-panel border border-white/10 rounded-2xl p-8 space-y-6">
            
            <div>
                <label asp-for="Title" class="block text-sm font-medium text-gray-400 mb-2">Title</label>
                <input asp-for="Title" class="w-full bg-black/50 border border-white/10 rounded-lg px-4 py-3 text-white focus:outline-none focus:border-accent transition-colors" />
                <span asp-validation-for="Title" class="text-red-500 text-xs"></span>
            </div>

            <div class="grid grid-cols-2 gap-6">
                <div>
                    <label asp-for="Category" class="block text-sm font-medium text-gray-400 mb-2">Category</label>
                    <select asp-for="Category" class="w-full bg-black/50 border border-white/10 rounded-lg px-4 py-3 text-white focus:outline-none focus:border-accent transition-colors">
                        <option value="Platform News">Platform News</option>
                        <option value="Policy Update">Policy Update</option>
                        <option value="Tips & Guides">Tips & Guides</option>
                    </select>
                </div>
                 <div>
                    <label asp-for="Status" class="block text-sm font-medium text-gray-400 mb-2">Status</label>
                    <select asp-for="Status" class="w-full bg-black/50 border border-white/10 rounded-lg px-4 py-3 text-white focus:outline-none focus:border-accent transition-colors">
                        <option value="Active">Active</option>
                        <option value="Draft">Draft</option>
                    </select>
                </div>
            </div>

            <div>
                <label asp-for="ImageUrl" class="block text-sm font-medium text-gray-400 mb-2">Image URL</label>
                <input asp-for="ImageUrl" class="w-full bg-black/50 border border-white/10 rounded-lg px-4 py-3 text-white focus:outline-none focus:border-accent transition-colors" />
            </div>

            <div>
                <label asp-for="Content" class="block text-sm font-medium text-gray-400 mb-2">Content</label>
                <textarea asp-for="Content" rows="6" class="w-full bg-black/50 border border-white/10 rounded-lg px-4 py-3 text-white focus:outline-none focus:border-accent transition-colors"></textarea>
                <span asp-validation-for="Content" class="text-red-500 text-xs"></span>
            </div>

        </div>

        <div class="flex justify-end gap-4">
             <a asp-action="Insights" class="px-6 py-3 rounded-lg border border-white/10 text-white hover:bg-white/5 transition-colors">Cancel</a>
            <button type="submit" class="px-6 py-3 rounded-lg bg-accent text-white font-bold hover:bg-accent/80 transition-all shadow-[0_0_20px_rgba(172,88,233,0.3)] hover:shadow-[0_0_30px_rgba(172,88,233,0.5)]">
                Update Insight
            </button>
        </div>
    </form>
</div>
