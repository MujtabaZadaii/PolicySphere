@model IEnumerable<E_project_Insu.Models.Payment>

@{
    ViewData["Title"] = "Payment Record";
}

<div class="p-8" x-data="{ search: '' }">
    <div class="flex items-center justify-between mb-8">
        <div>
            <h1 class="text-3xl font-display font-bold text-white mb-2">Payment Records</h1>
            <p class="text-gray-400">Transaction history log.</p>
        </div>
        <div class="relative">
            <input type="text" x-model="search" placeholder="Search User or Policy..." class="bg-black border border-white/10 rounded-full px-4 py-2 pl-10 text-sm text-white focus:outline-none focus:border-accent w-64 transition-all">
            <svg class="w-4 h-4 text-gray-400 absolute left-3 top-3" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path></svg>
        </div>
    </div>

    <!-- Table -->
    <div class="bg-panel border border-white/10 rounded-2xl overflow-hidden">
        <div class="overflow-x-auto">
            <table class="w-full text-left">
                <thead>
                    <tr class="bg-white/5 border-b border-white/10 text-gray-400 text-xs uppercase tracking-wider">
                        <th class="p-6 font-medium">Payment ID</th>
                        <th class="p-6 font-medium">Payer</th>
                        <th class="p-6 font-medium">Policy</th>
                        <th class="p-6 font-medium">Amount</th>
                        <th class="p-6 font-medium">Date</th>

                        <th class="p-6 font-medium">Method / Ref</th>
                        <th class="p-6 font-medium">Status</th>
                        <th class="p-6 font-medium">Action</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-white/5">
                    @foreach (var payment in Model)
                    {
                        <tr class="hover:bg-white/5 transition-colors" x-show="search === '' || '@payment.Policy?.User?.FirstName @payment.Policy?.User?.LastName @payment.Policy?.PolicyNumber'.toLowerCase().includes(search.toLowerCase())">
                            <td class="p-6 text-gray-500">#@payment.PaymentId</td>
                            <td class="p-6 text-white font-medium">
                                <div class="flex flex-col">
                                    <span>@payment.Policy?.User?.FirstName @payment.Policy?.User?.LastName</span>
                                    <span class="text-xs text-gray-500">@payment.Policy?.User?.Email</span>
                                </div>
                            </td>
                            <td class="p-6 text-gray-300 font-mono text-sm">@payment.Policy?.PolicyNumber</td>
                            <td class="p-6 text-green-400 font-bold">@payment.Amount.ToString("C")</td>
                            <td class="p-6 text-gray-400 text-sm">@payment.PaymentDate.ToString("MMM dd, yyyy HH:mm")</td>
                            <td class="p-6 text-sm">
                                <div class="text-white">@payment.PaymentMethod</div>
                                <div class="text-gray-500 font-mono text-xs">@payment.TransactionReference</div>
                            </td>
                            <td class="p-6">
                                <span class="px-3 py-1 rounded-full text-xs font-medium border border-white/10 
                                      @(payment.PaymentStatus == "Pending" ? "bg-yellow-500/10 text-yellow-400 border-yellow-500/20" : "bg-green-500/10 text-green-400 border-green-500/20")">
                                    @payment.PaymentStatus
                                </span>
                            </td>
                            <td class="p-6">
                                @if(payment.PaymentStatus == "Pending")
                                {
                                    <a asp-action="VerifyPayment" asp-route-id="@payment.PaymentId" class="bg-accent/10 hover:bg-accent/20 text-accent border border-accent/20 px-3 py-1 rounded-lg text-xs transition-colors">Verify</a>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        @if (!Model.Any())
        {
            <div class="p-12 text-center text-gray-500">
                No payments records found.
            </div>
        }
    </div>
</div>
