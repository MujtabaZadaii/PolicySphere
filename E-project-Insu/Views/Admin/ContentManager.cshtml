@{
    ViewData["Title"] = "Content Manager";
    Layout = "_AdminLayout";
    var services = ViewBag.Services as List<E_project_Insu.Models.Service>;
    var benefits = ViewBag.Benefits as List<E_project_Insu.Models.Benefit>;
}

<div class="space-y-12">
    <!-- Services Section -->
    <div class="space-y-6">
        <div class="flex justify-between items-center bg-gradient-to-r from-accent/10 to-transparent p-6 rounded-2xl border border-accent/20">
             <div>
                 <h1 class="text-3xl font-bold bg-clip-text text-transparent bg-gradient-to-r from-white to-gray-400">
                    Our Services
                 </h1>
                 <p class="text-gray-500 mt-1">Manage the core services displayed on the website.</p>
             </div>
             <!-- Add Service Toggle -->
             <button onclick="document.getElementById('serviceForm').classList.toggle('hidden')" class="px-6 py-2.5 rounded-xl bg-accent text-white font-medium hover:bg-accent/80 transition-all shadow-lg hover:shadow-accent/40 flex items-center gap-2">
                 <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path></svg>
                 Add New Service
             </button>
        </div>

        <!-- Add Service Form -->
        <div id="serviceForm" class="hidden bg-white/5 border border-white/10 rounded-2xl p-8 backdrop-blur-xl">
            <h3 class="text-xl font-bold text-white mb-6">Details</h3>
            <form asp-action="AddService" method="post" class="space-y-6">
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <div class="group">
                        <label class="block text-sm font-medium text-gray-400 mb-2">Title</label>
                        <input type="text" name="Title" required class="w-full bg-black/50 border border-white/10 rounded-lg px-4 py-3 text-white focus:border-accent focus:ring-1 focus:ring-accent outline-none transition-all placeholder-gray-600" placeholder="e.g. Life Insurance" />
                    </div>
                     <div class="group">
                        <label class="block text-sm font-medium text-gray-400 mb-2">Icon (Class or Path)</label>
                        <input type="text" name="Icon" class="w-full bg-black/50 border border-white/10 rounded-lg px-4 py-3 text-white focus:border-accent focus:ring-1 focus:ring-accent outline-none transition-all placeholder-gray-600" placeholder="Emoji or SVG" />
                    </div>
                </div>
                <div class="group">
                    <label class="block text-sm font-medium text-gray-400 mb-2">Description</label>
                    <textarea name="Description" required rows="3" class="w-full bg-black/50 border border-white/10 rounded-lg px-4 py-3 text-white focus:border-accent focus:ring-1 focus:ring-accent outline-none transition-all placeholder-gray-600" placeholder="Brief description..."></textarea>
                </div>
                <div class="flex justify-end pt-4">
                    <button type="submit" class="px-8 py-3 rounded-xl bg-white text-black font-bold hover:bg-accent hover:text-white transition-all">Save Service</button>
                </div>
            </form>
        </div>

        <!-- Services List -->
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            @if (services != null)
            {
                foreach (var item in services)
                {
                    <div class="group bg-white/5 border border-white/10 rounded-2xl p-6 hover:bg-white/10 transition-all flex flex-col justify-between">
                        <div>
                            <div class="w-12 h-12 rounded-lg bg-accent/20 flex items-center justify-center text-2xl mb-4 group-hover:scale-110 transition-transform">
                                @item.Icon
                            </div>
                            <h3 class="text-xl font-bold text-white mb-2">@item.Title</h3>
                            <p class="text-sm text-gray-400 leading-relaxed overflow-hidden">@item.Description</p>
                        </div>
                        <div class="mt-6 pt-6 border-t border-white/5 flex justify-between items-center">
                            <a asp-action="EditService" asp-route-id="@item.ServiceId" class="text-accent hover:text-accent/80 transition-colors text-sm font-medium">
                                Edit
                            </a>
                            <a asp-action="DeleteService" asp-route-id="@item.ServiceId" class="text-red-400 hover:text-red-300 transition-colors text-sm font-medium" onclick="return confirm('Delete this service?')">
                                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path></svg>
                            </a>
                        </div>
                    </div>
                }
            }
        </div>
    </div>

    <div class="h-px bg-white/10 w-full"></div>

    <!-- Benefits Section -->
    <div class="space-y-6">
         <div class="flex justify-between items-center bg-gradient-to-r from-purple-900/20 to-transparent p-6 rounded-2xl border border-white/10">
             <div>
                 <h1 class="text-3xl font-bold bg-clip-text text-transparent bg-gradient-to-r from-white to-gray-400">
                    Core Benefits
                 </h1>
                 <p class="text-gray-500 mt-1">Update the 'Why Choose Us' benefits section.</p>
             </div>
             <!-- Add Benefit Toggle -->
             <button onclick="document.getElementById('benefitForm').classList.toggle('hidden')" class="px-6 py-2.5 rounded-xl bg-white text-black font-medium hover:bg-gray-200 transition-all shadow-lg flex items-center gap-2">
                 <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path></svg>
                 Add Benefit
             </button>
        </div>

        <!-- Add Benefit Form -->
        <div id="benefitForm" class="hidden bg-white/5 border border-white/10 rounded-2xl p-8 backdrop-blur-xl">
             <h3 class="text-xl font-bold text-white mb-6">Details</h3>
            <form asp-action="AddBenefit" method="post" class="space-y-6">
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <div class="group">
                        <label class="block text-sm font-medium text-gray-400 mb-2">Title</label>
                        <input type="text" name="Title" required class="w-full bg-black/50 border border-white/10 rounded-lg px-4 py-3 text-white focus:border-accent focus:ring-1 focus:ring-accent outline-none transition-all placeholder-gray-600" placeholder="e.g. 24/7 Support" />
                    </div>
                     <div class="group">
                        <label class="block text-sm font-medium text-gray-400 mb-2">Number (e.g. 01)</label>
                        <input type="text" name="Number" class="w-full bg-black/50 border border-white/10 rounded-lg px-4 py-3 text-white focus:border-accent focus:ring-1 focus:ring-accent outline-none transition-all placeholder-gray-600" placeholder="01" />
                    </div>
                </div>
                <div class="group">
                    <label class="block text-sm font-medium text-gray-400 mb-2">Description</label>
                    <textarea name="Description" required rows="3" class="w-full bg-black/50 border border-white/10 rounded-lg px-4 py-3 text-white focus:border-accent focus:ring-1 focus:ring-accent outline-none transition-all placeholder-gray-600" placeholder="Benefit details..."></textarea>
                </div>
                <div class="flex justify-end pt-4">
                    <button type="submit" class="px-8 py-3 rounded-xl bg-accent text-white font-bold hover:bg-accent/80 transition-all">Save Benefit</button>
                </div>
            </form>
        </div>

        <!-- Benefits List -->
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
            @if (benefits != null)
            {
                foreach (var item in benefits)
                {
                    <div class="group relative bg-[#0a0a0a] border border-white/10 rounded-2xl p-6 hover:border-accent/50 transition-all overflow-hidden">
                        <div class="absolute -right-4 -top-4 text-6xl font-display font-bold text-white/5 group-hover:text-accent/10 transition-colors pointer-events-none">
                            @item.Number
                        </div>
                        <div class="relative z-10">
                            <h3 class="text-lg font-bold text-white mb-3 pt-4">@item.Title</h3>
                            <p class="text-sm text-gray-400">@item.Description</p>
                         </div>
                          <div class="mt-4 pt-4 border-t border-white/5 flex justify-between items-center">
                             <a asp-action="EditBenefit" asp-route-id="@item.BenefitId" class="text-accent hover:text-accent/80 transition-colors text-sm font-medium">
                                 Edit
                             </a>
                             <a asp-action="DeleteBenefit" asp-route-id="@item.BenefitId" class="text-red-400 hover:text-red-300 transition-colors text-sm font-medium" onclick="return confirm('Delete this benefit?')">
                                 Remove
                             </a>
                         </div>
                    </div>
                }
            }
        </div>
    </div>
</div>
