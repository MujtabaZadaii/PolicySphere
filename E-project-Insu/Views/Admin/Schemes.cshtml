@model IEnumerable<E_project_Insu.Models.Scheme>

@{
    ViewData["Title"] = "Manage Schemes";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="p-8 md:p-12 w-full max-w-7xl mx-auto">
    
    <!-- Header -->
    <div class="mb-12 intro-animate opacity-0 flex items-end justify-between">
        <div>
             <h1 class="text-3xl md:text-5xl font-display font-medium text-white mb-3">Insurance Schemes</h1>
             <p class="text-gray-500 font-light">Manage available insurance schemes and plans.</p>
        </div>
        <a asp-action="AddScheme" class="px-6 py-3 bg-accent text-black font-medium rounded-full hover:bg-accent/80 transition-colors">
            + Add New Scheme
        </a>
    </div>

    <!-- Schemes Table -->
    <div class="bg-[#0A0A0A] border border-white/5 rounded-2xl overflow-hidden intro-animate opacity-0 delay-100">
        <div class="overflow-x-auto">
            <table class="w-full text-left">
                <thead>
                    <tr class="bg-white/5 border-b border-white/10 text-gray-500 text-xs uppercase tracking-wider">
                        <th class="p-6 font-medium">Scheme Name</th>
                        <th class="p-6 font-medium">Type</th>
                        <th class="p-6 font-medium">Eligibility</th>
                        <th class="p-6 font-medium">Status</th>
                        <th class="p-6 font-medium">Created</th>
                        <th class="p-6 font-medium text-right">Actions</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-white/5">
                    @if (!Model.Any())
                    {
                        <tr>
                            <td colspan="6" class="p-12 text-center text-gray-500">
                                No schemes found. Create your first scheme to get started.
                            </td>
                        </tr>
                    }
                    @foreach (var scheme in Model)
                    {
                        <tr class="hover:bg-white/5 transition-colors">
                            <td class="p-6">
                                <span class="text-white font-medium text-lg">@scheme.SchemeName</span>
                            </td>
                            <td class="p-6">
                                <span class="px-3 py-1 rounded-full text-xs font-bold uppercase bg-accent/10 text-accent border border-accent/20">
                                    @scheme.InsuranceType
                                </span>
                            </td>
                            <td class="p-6 text-gray-400 text-sm max-w-xs truncate">
                                @scheme.Eligibility
                            </td>
                            <td class="p-6">
                                <span class="px-3 py-1 rounded-full text-xs font-bold uppercase tracking-wider 
                                      @(scheme.Status == "Active" ? "bg-green-500/10 text-green-500 border border-green-500/20" : "bg-gray-500/10 text-gray-500 border border-gray-500/20")">
                                    @scheme.Status
                                </span>
                            </td>
                            <td class="p-6 text-gray-400 text-sm">
                                @scheme.CreatedDate.ToString("MMM dd, yyyy")
                            </td>
                            <td class="p-6 text-right">
                                <a asp-action="EditScheme" asp-route-id="@scheme.SchemeId" 
                                   class="inline-flex items-center gap-2 px-4 py-2 text-sm text-accent hover:text-white border border-accent/30 hover:bg-accent/10 rounded-lg transition-all">
                                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path></svg>
                                    Edit
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

</div>

<script>
    document.addEventListener("DOMContentLoaded", function() {
        gsap.to(".intro-animate", { opacity: 1, y: 0, duration: 1, stagger: 0.2, ease: "power2.out" });
    });
</script>
