@model IEnumerable<E_project_Insu.Models.Inquiry>

@{
    ViewData["Title"] = "Inquiries";
    Layout = "_AdminLayout";
}

<div class="space-y-6">
    <div class="flex justify-between items-center">
         <div>
             <h1 class="text-3xl font-bold bg-clip-text text-transparent bg-gradient-to-r from-white to-gray-400">
                Messages
             </h1>
             <p class="text-gray-500 mt-1">Review inquiries from the contact form.</p>
         </div>
    </div>

    <!-- Stats -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        <div class="bg-white/5 border border-white/10 rounded-xl p-6 relative overflow-hidden group">
            <div class="absolute inset-0 bg-accent/5 opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
            <div class="relative z-10">
                <p class="text-sm font-medium text-gray-400 uppercase tracking-widest">Total Messages</p>
                <div class="flex items-baseline gap-2 mt-2">
                    <span class="text-3xl font-display font-bold text-white">@Model.Count()</span>
                </div>
            </div>
        </div>
        
        <div class="bg-white/5 border border-white/10 rounded-xl p-6 relative overflow-hidden group">
            <div class="absolute inset-0 bg-green-500/5 opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
             <div class="relative z-10">
                <p class="text-sm font-medium text-gray-400 uppercase tracking-widest">Unread</p>
                <div class="flex items-baseline gap-2 mt-2">
                    <span class="text-3xl font-display font-bold text-white">@Model.Count(i => !i.IsRead)</span>
                </div>
            </div>
        </div>
    </div>

    <!-- Table -->
    <div class="bg-white/5 border border-white/10 rounded-xl overflow-hidden backdrop-blur-sm">
        <div class="overflow-x-auto">
            <table class="w-full">
                <thead>
                    <tr class="border-b border-white/10 bg-white/5">
                        <th class="px-6 py-4 text-left text-xs font-medium text-gray-400 uppercase tracking-wider">Date</th>
                        <th class="px-6 py-4 text-left text-xs font-medium text-gray-400 uppercase tracking-wider">Name</th>
                        <th class="px-6 py-4 text-left text-xs font-medium text-gray-400 uppercase tracking-wider">Subject</th>
                        <th class="px-6 py-4 text-left text-xs font-medium text-gray-400 uppercase tracking-wider">Message</th>
                        <th class="px-6 py-4 text-left text-xs font-medium text-gray-400 uppercase tracking-wider">Status</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-white/5">
                    @foreach (var item in Model)
                    {
                        <tr class="hover:bg-white/5 transition-colors group">
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-400">
                                @item.Date.ToString("MMM dd, HH:mm")
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                <div class="flex flex-col">
                                    <span class="text-sm font-medium text-white">@item.Name</span>
                                    <span class="text-xs text-gray-500">@item.Email</span>
                                </div>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-white">
                                @item.Subject
                            </td>
                            <td class="px-6 py-4">
                                <p class="text-sm text-gray-400 line-clamp-2 max-w-xs" title="@item.Message">
                                    @item.Message
                                </p>
                            </td>
                             <td class="px-6 py-4 whitespace-nowrap">
                                 @if (!item.IsRead)
                                 {
                                     <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-500/10 text-red-500 border border-red-500/20">
                                         New
                                     </span>
                                 }
                                 else
                                 {
                                     <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-500/10 text-green-500 border border-green-500/20">
                                         Seen
                                     </span>
                                 }
                            </td>
                        </tr>
                    }
                    @if (!Model.Any())
                    {
                        <tr>
                            <td colspan="5" class="px-6 py-12 text-center text-gray-500">
                                No messages found.
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
