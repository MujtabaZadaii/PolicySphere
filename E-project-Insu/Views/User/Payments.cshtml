@model IEnumerable<E_project_Insu.Models.Payment>

@{
    ViewData["Title"] = "Payment History";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<div class="p-8 md:p-12 w-full max-w-7xl mx-auto">
    
    <div class="mb-12 intro-animate opacity-0 flex items-end justify-between">
        <div>
             <h1 class="text-3xl md:text-5xl font-display font-medium text-white mb-3">Payment History</h1>
             <p class="text-gray-500 font-light">Secure record of all your premium payments.</p>
        </div>
        <a asp-action="PayPremium" class="px-6 py-3 border border-white/20 text-white font-medium rounded-full hover:bg-white hover:text-black transition-colors">
            Pay Premium
        </a>
    </div>

    <div class="bg-[#0A0A0A] border border-white/5 rounded-2xl overflow-hidden intro-animate opacity-0 delay-100">
        <div class="overflow-x-auto">
            <table class="w-full text-left">
                <thead>
                    <tr class="bg-white/5 border-b border-white/10 text-gray-500 text-xs uppercase tracking-wider">
                        <th class="p-6 font-medium">Transaction ID</th>
                        <th class="p-6 font-medium">Policy</th>
                        <th class="p-6 font-medium">Amount Paid</th>
                        <th class="p-6 font-medium">Date Paid</th>
                        <th class="p-6 font-medium">Status</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-white/5">
                    @if (!Model.Any())
                    {
                        <tr>
                            <td colspan="5" class="p-12 text-center text-gray-500">
                                No payment records found.
                            </td>
                        </tr>
                    }
                    @foreach (var payment in Model)
                    {
                        <tr class="hover:bg-white/5 transition-colors">
                            <td class="p-6 text-gray-500 font-mono text-xs">TXN-@payment.PaymentId-@payment.PaymentDate.Ticks.ToString().Substring(10)</td>
                            <td class="p-6 text-gray-300">
                                <span class="block text-white font-medium">@payment.Policy?.PolicyType</span>
                                <span class="text-xs text-gray-500 font-mono">@payment.Policy?.PolicyNumber</span>
                            </td>
                            <td class="p-6 text-green-400 font-display text-lg">@payment.Amount.ToString("C")</td>
                            <td class="p-6 text-gray-400 text-sm">@payment.PaymentDate.ToString("MMM dd, yyyy HH:mm")</td>
                            <td class="p-6">
                                <span class="flex items-center text-xs font-bold uppercase tracking-wider text-green-500">
                                    <span class="w-1.5 h-1.5 rounded-full bg-green-500 mr-2"></span>
                                    @payment.PaymentStatus
                                </span>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<script>
    document.addEventListener("DOMContentLoaded", function() {
        gsap.to(".intro-animate", { opacity: 1, y: 0, duration: 1, stagger: 0.2, ease: "power2.out" });
    });
</script>
