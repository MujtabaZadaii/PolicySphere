@{
    ViewData["Title"] = "Pay Premium";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<div class="max-w-6xl mx-auto p-8 md:p-12">
    
    <!-- Page Header -->
    <div class="mb-12 opacity-0 fade-in-element">
        <h1 class="text-3xl font-display font-medium text-white mb-2">Pay Premium</h1>
        <p class="text-gray-400 font-light">Pay your due premium securely for your active policy.</p>
    </div>

    @if (ViewBag.Success != null)
    {
        <!-- Success State -->
        <div class="bg-[#0F0F0F] border border-green-500/20 rounded-xl p-12 text-center max-w-2xl mx-auto opacity-0 fade-in-element">
             <div class="w-16 h-16 bg-green-500/10 rounded-full flex items-center justify-center mx-auto mb-6 text-green-500">
                <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path></svg>
            </div>
            <h2 class="text-2xl text-white font-medium mb-2">Payment successful</h2>
            <p class="text-gray-400 mb-8">Your premium has been recorded.</p>
            <div class="flex justify-center gap-6">
                <a href="@Url.Action("Dashboard", "User")" class="text-white hover:text-accent transition-colors text-sm">Back to Dashboard</a>
                <a href="@Url.Action("Policies", "User")" class="text-white hover:text-accent transition-colors text-sm">View Policies</a>
            </div>
        </div>
    }
    else
    {
        <div class="grid grid-cols-1 lg:grid-cols-3 gap-12 opacity-0 fade-in-element">
            
            <!-- Left Column: Payment Flow -->
            <div class="lg:col-span-2">
                 <form method="post" asp-action="PayPremium" id="paymentForm" class="space-y-10">
                     @if (ViewBag.Error != null)
                     {
                         <div class="p-4 bg-red-500/10 border border-red-500/20 text-red-500 text-sm rounded-lg">@ViewBag.Error</div>
                     }
                     <input type="hidden" name="amount" id="hiddenAmount" />

                    <!-- Step 1: Select Policy -->
                    <div class="space-y-4">
                        <label class="block text-xs uppercase tracking-wider text-gray-500 font-semibold">Step 1: Select Policy</label>
                        <div class="relative">
                            <select name="policyId" id="policySelect" onchange="updateDetails()" class="w-full bg-[#0A0A0A] border-b border-white/10 px-0 py-3 text-xl text-white focus:border-accent focus:outline-none appearance-none transition-colors cursor-pointer" required>
                                <option value="" disabled selected>Choose a policy...</option>
                                @if (ViewBag.Policies != null)
                                {
                                    foreach (var policy in ViewBag.Policies as IEnumerable<E_project_Insu.Models.Policy>)
                                    {
                                        <option value="@policy.PolicyId" data-amount="@policy.PremiumAmount">@policy.PolicyType Policy â€” @policy.PolicyNumber</option>
                                    }
                                }
                            </select>
                            <div class="absolute inset-y-0 right-0 flex items-center pointer-events-none text-gray-500">
                                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path></svg>
                            </div>
                        </div>
                    </div>

                    <!-- Step 2: Amount -->
                    <div id="amountSection" class="hidden space-y-4 transition-all duration-500">
                        <label class="block text-xs uppercase tracking-wider text-gray-500 font-semibold">Step 2: Payment Amount</label>
                        <div class="flex items-baseline gap-3">
                             <span class="text-4xl text-white font-medium" id="displayAmount">$0.00</span>
                             <span class="text-sm text-gray-500 font-mono">USD</span>
                        </div>
                    </div>

                    <!-- Step 3: Payment Method -->
                    <div id="methodSection" class="hidden space-y-6 transition-all duration-500">
                        <label class="block text-xs uppercase tracking-wider text-gray-500 font-semibold">Step 3: Payment Method</label>
                        
                        <div class="flex flex-col gap-4">
                            <!-- Card Option -->
                            <div>
                                <label class="flex items-center gap-4 p-4 border border-white/10 rounded-lg cursor-pointer hover:bg-white/5 transition-colors group">
                                    <input type="radio" name="method" value="card" class="text-accent focus:ring-accent bg-transparent border-white/20" checked onchange="toggleMethod('card')">
                                    <span class="text-white font-medium group-hover:text-white transition-colors">Card Payment</span>
                                </label>
                                
                                <div id="cardInputs" class="ml-4 pl-4 border-l border-white/10 space-y-4 mt-4">
                                    <input type="text" placeholder="Card Number" class="w-full bg-transparent border-b border-white/10 py-2 text-white placeholder-gray-600 focus:border-accent focus:outline-none text-lg font-mono">
                                    <div class="grid grid-cols-2 gap-8">
                                         <input type="text" placeholder="MM/YY" class="w-full bg-transparent border-b border-white/10 py-2 text-white placeholder-gray-600 focus:border-accent focus:outline-none text-lg font-mono">
                                         <input type="text" placeholder="CVC" maxlength="3" class="w-full bg-transparent border-b border-white/10 py-2 text-white placeholder-gray-600 focus:border-accent focus:outline-none text-lg font-mono">
                                    </div>
                                </div>
                            </div>

                            <!-- Bank Option -->
                            <div>
                                <label class="flex items-center gap-4 p-4 border border-white/10 rounded-lg cursor-pointer hover:bg-white/5 transition-colors group">
                                    <input type="radio" name="method" value="bank" class="text-accent focus:ring-accent bg-transparent border-white/20" onchange="toggleMethod('bank')">
                                    <span class="text-white font-medium group-hover:text-white transition-colors">Bank / Wallet Transfer</span>
                                </label>

                                <div id="bankInfo" class="hidden ml-4 pl-4 border-l border-white/10 mt-4">
                                    <div class="bg-[#0A0A0A] p-4 text-sm text-gray-400">
                                        <p class="mb-2 uppercase tracking-wide text-xs">Transfer to:</p>
                                        <p class="text-white font-mono text-xl mb-1 select-all">03208010993</p>
                                        <p class="text-xs text-accent">Easypaisa / Jazzcash</p>
                                    </div>
                                    <div class="mt-4">
                                        <label class="block text-gray-500 text-xs uppercase tracking-wider mb-2">Transaction Reference (Required)</label>
                                        <input type="text" name="transactionDetails" placeholder="e.g., TRX-8829102" class="w-full bg-transparent border-b border-white/10 py-2 text-white placeholder-gray-600 focus:border-accent focus:outline-none text-lg font-mono">
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Step 4: Confirm -->
                    <div id="confirmSection" class="hidden pt-4 transition-all duration-500">
                        <button type="submit" id="submitBtn" class="bg-white text-black px-8 py-4 rounded-lg font-medium hover:bg-gray-200 transition-colors w-full md:w-auto text-sm uppercase tracking-wider">
                            Confirm Payment
                        </button>
                    </div>

                 </form>
            </div>

            <!-- Right Column: Trust Panel -->
            <div class="lg:col-span-1 border-l border-white/5 pl-0 lg:pl-12 pt-12 lg:pt-0">
                <div class="space-y-10 sticky top-12">
                    
                    <div>
                        <h3 class="text-white font-medium mb-2 flex items-center gap-2 text-sm uppercase tracking-wide">
                            <svg class="w-4 h-4 text-emerald-500" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"></path></svg>
                            Secure Transaction
                        </h3>
                        <p class="text-sm text-gray-500 leading-relaxed font-light">
                            All payments are processed via a 256-bit encrypted connection. Your financial data is never stored on our servers.
                        </p>
                    </div>

                    <div>
                        <h3 class="text-white font-medium mb-2 text-sm uppercase tracking-wide">Instant Update</h3>
                        <p class="text-sm text-gray-500 leading-relaxed font-light">
                            Policy status is updated in real-time. You will receive a digital receipt immediately after confirmation.
                        </p>
                    </div>

                     <div>
                        <h3 class="text-white font-medium mb-2 text-sm uppercase tracking-wide">Support</h3>
                         <p class="text-sm text-gray-500 leading-relaxed font-light">
                            Need assistance?<br> <a href="#" class="text-white hover:underline">Contact Support</a>
                        </p>
                    </div>

                </div>
            </div>

        </div>
    }
</div>

<script>
    document.addEventListener("DOMContentLoaded", function() {
        const elements = document.querySelectorAll('.fade-in-element');
        elements.forEach(el => {
            el.classList.remove('opacity-0');
            el.classList.add('transition-opacity', 'duration-1000', 'ease-out');
        });
    });

    function updateDetails() {
        const select = document.getElementById('policySelect');
        const selected = select.options[select.selectedIndex];
        if (!selected.value) return;

        const amount = selected.dataset.amount;
        
        // Show sections
        document.getElementById('amountSection').classList.remove('hidden');
        document.getElementById('methodSection').classList.remove('hidden');
        document.getElementById('confirmSection').classList.remove('hidden');
        
        // Update values
        document.getElementById('displayAmount').innerText = '$' + parseFloat(amount).toFixed(2);
        document.getElementById('hiddenAmount').value = amount;
    }

    function toggleMethod(method) {
        const cardInputs = document.getElementById('cardInputs');
        const bankInfo = document.getElementById('bankInfo');

        if (method === 'card') {
            cardInputs.classList.remove('hidden');
            bankInfo.classList.add('hidden');
        } else {
            cardInputs.classList.add('hidden');
            bankInfo.classList.remove('hidden');
        }
    }

    document.getElementById('paymentForm')?.addEventListener('submit', function(e) {
        const btn = document.getElementById('submitBtn');
        btn.disabled = true;
        btn.innerText = "Processing...";
        btn.classList.add('opacity-75', 'cursor-not-allowed');
    });
</script>
