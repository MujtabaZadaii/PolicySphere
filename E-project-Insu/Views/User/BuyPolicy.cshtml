@{
    ViewData["Title"] = "Purchase Policy";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<div class="p-8 md:p-12 w-full max-w-3xl mx-auto flex flex-col gap-12">
    
    <div class="intro-animate opacity-0 mb-10 text-center">
        <h1 class="text-3xl md:text-5xl font-display font-medium text-white mb-3">Custom Policy Application.</h1>
        <p class="text-gray-500 font-light text-sm">Design a policy that fits your needs.</p>
    </div>

    <form class="space-y-8 intro-animate opacity-0" method="post" asp-action="BuyPolicy">
        
        <!-- Policy Type -->
        <div class="space-y-4">
            <label class="text-[10px] uppercase tracking-widest text-gray-400 font-semibold">Select Insurance Type</label>
            <div class="grid grid-cols-2 sm:grid-cols-4 gap-4">
                <label class="cursor-pointer">
                    <input type="radio" name="policyType" value="Life" class="peer sr-only" checked>
                    <div class="h-14 flex items-center justify-center rounded-xl bg-white/5 border border-white/10 text-gray-400 hover:text-white hover:border-white/20 peer-checked:bg-accent/10 peer-checked:border-accent peer-checked:text-accent transition-all ring-0 peer-focus-visible:ring-2 ring-accent/50">
                        <span class="font-medium text-sm">Life</span>
                    </div>
                </label>
                <label class="cursor-pointer">
                    <input type="radio" name="policyType" value="Medical" class="peer sr-only">
                    <div class="h-14 flex items-center justify-center rounded-xl bg-white/5 border border-white/10 text-gray-400 hover:text-white hover:border-white/20 peer-checked:bg-accent/10 peer-checked:border-accent peer-checked:text-accent transition-all">
                        <span class="font-medium text-sm">Medical</span>
                    </div>
                </label>
                <label class="cursor-pointer">
                    <input type="radio" name="policyType" value="Motor" class="peer sr-only">
                    <div class="h-14 flex items-center justify-center rounded-xl bg-white/5 border border-white/10 text-gray-400 hover:text-white hover:border-white/20 peer-checked:bg-accent/10 peer-checked:border-accent peer-checked:text-accent transition-all">
                        <span class="font-medium text-sm">Motor</span>
                    </div>
                </label>
                <label class="cursor-pointer">
                    <input type="radio" name="policyType" value="Home" class="peer sr-only">
                    <div class="h-14 flex items-center justify-center rounded-xl bg-white/5 border border-white/10 text-gray-400 hover:text-white hover:border-white/20 peer-checked:bg-accent/10 peer-checked:border-accent peer-checked:text-accent transition-all">
                        <span class="font-medium text-sm">Home</span>
                    </div>
                </label>
            </div>
        </div>

        <!-- Policy Name (Custom) -->
        <div class="group relative">
            <input type="text" id="policyName" name="policyName" class="peer w-full bg-transparent border-b border-white/20 py-3 text-xl text-white placeholder-transparent focus:outline-none focus:border-accent transition-colors" placeholder="Policy Name" />
            <label for="policyName" class="absolute left-0 -top-3.5 text-gray-500 text-xs transition-all peer-placeholder-shown:text-base peer-placeholder-shown:text-gray-500 peer-placeholder-shown:top-3 peer-focus:-top-3.5 peer-focus:text-accent peer-focus:text-xs">Custom Name (Optional)</label>
            <p class="mt-1 text-xs text-gray-600">Give your policy a nickname (e.g., "Family Protection")</p>
        </div>

        <!-- Coverage Amount -->
        <div class="group relative">
            <input type="number" id="coverage" name="coverageAmount" min="1000" class="peer w-full bg-transparent border-b border-white/20 py-3 text-2xl text-white placeholder-transparent focus:outline-none focus:border-accent transition-colors" placeholder="Coverage" required />
            <label for="coverage" class="absolute left-0 -top-3.5 text-gray-500 text-xs transition-all peer-placeholder-shown:text-base peer-placeholder-shown:text-gray-500 peer-placeholder-shown:top-3 peer-focus:-top-3.5 peer-focus:text-accent peer-focus:text-xs">Coverage Amount ($)</label>
        </div>

        <!-- Term Selection -->
        <div class="space-y-4">
            <label class="text-[10px] uppercase tracking-widest text-gray-400 font-semibold">Duration</label>
            <div class="relative">
                <select id="term" name="durationYears" class="w-full bg-[#0F0F0F] text-white border border-white/10 rounded-xl px-4 py-3 appearance-none focus:outline-none focus:border-accent transition-colors">
                    <option value="1">1 Year</option>
                    <option value="5">5 Years</option>
                    <option value="10">10 Years</option>
                    <option value="20">20 Years</option>
                </select>
                <div class="absolute inset-y-0 right-0 flex items-center px-4 pointer-events-none text-gray-500">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path></svg>
                </div>
            </div>
        </div>

         <!-- Button -->
        <button type="submit" class="w-full py-4 rounded-xl bg-white text-black font-display font-medium text-lg hover:bg-gray-200 transition-all duration-300 mt-8 flex items-center justify-center group">
            Submit Application
            <svg class="w-5 h-5 ml-2 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>
        </button>
        
        <p class="text-xs text-center text-gray-600 mt-4">
            Your application will be reviewed by an administrator. Premiums are calculated based on standard rates.
        </p>

    </form>
</div>

<script>
    document.addEventListener("DOMContentLoaded", function() {
        gsap.to(".intro-animate", { opacity: 1, y: 0, duration: 1, stagger:0.2, ease: "power2.out" });
    });
</script>
