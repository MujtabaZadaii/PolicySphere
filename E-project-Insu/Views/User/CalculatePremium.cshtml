@{
    ViewData["Title"] = "Premium Estimator";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<div class="p-8 md:p-12 w-full max-w-5xl mx-auto flex flex-col md:flex-row gap-12">
    
    <!-- Left: Calculator Form -->
    <div class="flex-1 intro-animate opacity-0">
        <div class="mb-10">
            <h1 class="text-3xl md:text-5xl font-display font-medium text-white mb-3">Premium Estimator.</h1>
            <p class="text-gray-500 font-light text-sm">Calculate your potential insurance costs instantly.</p>
        </div>

        <form id="calculatorForm" class="space-y-8" method="post" asp-action="CalculatePremium">
            
            <!-- Policy Type -->
            <div class="space-y-4">
                <label class="text-[10px] uppercase tracking-widest text-gray-400 font-semibold">Select Policy Type</label>
                <div class="grid grid-cols-2 gap-4">
                    <label class="cursor-pointer">
                        <input type="radio" name="policyType" value="Life" class="peer sr-only" checked onchange="updateFormDisplay()">
                        <div class="h-16 flex items-center justify-center rounded-xl bg-white/5 border border-white/10 text-gray-400 hover:text-white hover:border-white/20 peer-checked:bg-accent/10 peer-checked:border-accent peer-checked:text-accent transition-all ring-0 peer-focus-visible:ring-2 ring-accent/50">
                            <span class="font-medium">Life</span>
                        </div>
                    </label>
                    <label class="cursor-pointer">
                        <input type="radio" name="policyType" value="Medical" class="peer sr-only" onchange="updateFormDisplay()">
                        <div class="h-16 flex items-center justify-center rounded-xl bg-white/5 border border-white/10 text-gray-400 hover:text-white hover:border-white/20 peer-checked:bg-accent/10 peer-checked:border-accent peer-checked:text-accent transition-all">
                            <span class="font-medium">Medical</span>
                        </div>
                    </label>
                    <label class="cursor-pointer">
                        <input type="radio" name="policyType" value="Motor" class="peer sr-only" onchange="updateFormDisplay()">
                        <div class="h-16 flex items-center justify-center rounded-xl bg-white/5 border border-white/10 text-gray-400 hover:text-white hover:border-white/20 peer-checked:bg-accent/10 peer-checked:border-accent peer-checked:text-accent transition-all">
                            <span class="font-medium">Motor</span>
                        </div>
                    </label>
                    <label class="cursor-pointer">
                        <input type="radio" name="policyType" value="Home" class="peer sr-only" onchange="updateFormDisplay()">
                        <div class="h-16 flex items-center justify-center rounded-xl bg-white/5 border border-white/10 text-gray-400 hover:text-white hover:border-white/20 peer-checked:bg-accent/10 peer-checked:border-accent peer-checked:text-accent transition-all">
                            <span class="font-medium">Home</span>
                        </div>
                    </label>
                </div>
            </div>

            <!-- Age Input (Life/Medical Only) -->
            <div id="ageGroup" class="group relative">
                <input type="number" id="age" min="18" max="100" class="peer w-full bg-transparent border-b border-white/20 py-3 text-2xl text-white placeholder-transparent focus:outline-none focus:border-accent transition-colors" placeholder="Age" required />
                <label for="age" class="absolute left-0 -top-3.5 text-gray-500 text-xs transition-all peer-placeholder-shown:text-base peer-placeholder-shown:text-gray-500 peer-placeholder-shown:top-3 peer-focus:-top-3.5 peer-focus:text-accent peer-focus:text-xs">Your Age</label>
            </div>

            <!-- Coverage Amount -->
            <div class="group relative">
                <input type="number" id="coverage" name="coverageAmount" min="1000" class="peer w-full bg-transparent border-b border-white/20 py-3 text-2xl text-white placeholder-transparent focus:outline-none focus:border-accent transition-colors" placeholder="Coverage" required value="@ViewBag.CoverageAmount" />
                <label for="coverage" class="absolute left-0 -top-3.5 text-gray-500 text-xs transition-all peer-placeholder-shown:text-base peer-placeholder-shown:text-gray-500 peer-placeholder-shown:top-3 peer-focus:-top-3.5 peer-focus:text-accent peer-focus:text-xs">Desired Coverage ($)</label>
            </div>

            <!-- Term Selection -->
            <div class="space-y-4">
                <label class="text-[10px] uppercase tracking-widest text-gray-400 font-semibold">Policy Term</label>
                <div class="relative">
                    <select id="term" name="policyTerm" class="w-full bg-[#0F0F0F] text-white border border-white/10 rounded-xl px-4 py-3 appearance-none focus:outline-none focus:border-accent transition-colors">
                        <option value="1">1 Year</option>
                        <option value="5">5 Years</option>
                        <option value="10">10 Years</option>
                        <option value="20">20 Years</option>
                    </select>
                    <div class="absolute inset-y-0 right-0 flex items-center px-4 pointer-events-none text-gray-500">
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path></svg>
                    </div>
                </div>
            </div>

             <!-- Button -->
            <button type="submit" class="w-full py-4 rounded-xl bg-white text-black font-display font-medium text-lg hover:bg-gray-200 transition-all duration-300 mt-8 flex items-center justify-center group">
                Calculate Estimate
                <svg class="w-5 h-5 ml-2 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path></svg>
            </button>

        </form>
    </div>

    <!-- Right: Result Area -->
    <div class="w-full md:w-96 intro-animate opacity-0 delay-200">
        <div class="sticky top-24">
             <div class="bg-[#0A0A0A] border border-white/5 rounded-3xl p-8 relative overflow-hidden min-h-[400px] flex flex-col justify-center items-center text-center">
                
                <!-- Decor Glow -->
                <div class="absolute top-0 right-0 w-64 h-64 bg-accent/5 rounded-full blur-3xl pointer-events-none"></div>

                @if (ViewBag.CalculatedPremium == null)
                {
                    <!-- Initial State -->
                    <div id="resultPlaceholder" class="transition-opacity duration-500">
                         <div class="w-16 h-16 rounded-full bg-white/5 flex items-center justify-center mx-auto mb-6 text-gray-600">
                            <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 7h6m0 10v-3m-3 3h.01M9 17h.01M9 14h.01M12 14h.01M15 11h.01M12 11h.01M9 11h.01M7 21h10a2 2 0 002-2V5a2 2 0 00-2-2H7a2 2 0 00-2 2v14a2 2 0 002 2z"></path></svg>
                         </div>
                         <p class="text-gray-500 text-sm max-w-[200px] mx-auto">Fill out the form to see your estimated premium.</p>
                    </div>
                }
                else
                {
                    <!-- Result State -->
                    <div id="resultContainer" class="opacity-100 transform translate-y-0 transition-all duration-700">
                        <p class="text-[10px] uppercase tracking-widest text-accent mb-2 font-semibold">Estimated Premium</p>
                        <div class="text-5xl md:text-6xl font-display font-medium text-white mb-2">
                            $<span>@ViewBag.CalculatedPremium.ToString("N2")</span>
                        </div>
                        <p class="text-gray-500 text-sm mb-8">per month</p>

                        <div class="w-full border-t border-white/10 pt-6 space-y-3">
                            <div class="flex justify-between text-sm">
                                <span class="text-gray-500">Coverage</span>
                                <span class="text-white font-medium">$@ViewBag.CoverageAmount?.ToString("N0")</span>
                            </div>
                            <div class="flex justify-between text-sm">
                                <span class="text-gray-500">Term</span>
                                <span class="text-white font-medium">@ViewBag.PolicyTerm Years</span>
                            </div>
                             <div class="flex justify-between text-sm">
                                <span class="text-gray-500">Type</span>
                                <span class="text-white font-medium">@ViewBag.PolicyType</span>
                            </div>
                        </div>

                        <div class="mt-8 p-4 bg-white/5 rounded-xl border border-white/5 text-left">
                            <p class="text-[10px] text-gray-500 leading-relaxed">
                                @ViewBag.Disclaimer
                            </p>
                        </div>
                    </div>
                }

             </div>
        </div>
    </div>
</div>

<script>
    document.addEventListener("DOMContentLoaded", function() {
        gsap.to(".intro-animate", { opacity: 1, y: 0, duration: 1, stagger:0.2, ease: "power2.out" });
        updateFormDisplay();
    });

    function updateFormDisplay() {
        const type = document.querySelector('input[name="policyType"]:checked').value;
        const ageGroup = document.getElementById('ageGroup');
        
        // Simple logic: Hide Age for Home/Motor to keep it cleaner (for demo)
        if (type === 'Home' || type === 'Motor') {
             ageGroup.style.display = 'none';
             document.getElementById('age').required = false;
        } else {
             ageGroup.style.display = 'block';
             document.getElementById('age').required = true;
        }
    }

    function calculatePremium(e) {
        e.preventDefault();
        
        // Gather Data
        const type = document.querySelector('input[name="policyType"]:checked').value;
        const coverage = parseFloat(document.getElementById('coverage').value);
        const term = document.getElementById('term').value;
        const age = document.getElementById('age').value || 30; // Default for hidden

        // Dummy Calculation Logic (Deterministic)
        let baseRate = 0.05; // 5% base
        if (type === 'Medical') baseRate = 0.08;
        if (type === 'Motor') baseRate = 0.12;
        if (type === 'Home') baseRate = 0.03;

        // Age Factor
        const ageFactor = (parseInt(age) > 40) ? 1.5 : 1.0;

        let annualPremium = coverage * baseRate * ageFactor / 100; // Simplified formula
        let monthlyPremium = (annualPremium / 12).toFixed(2);

        // Update UI
        document.getElementById('premiumAmount').innerText = monthlyPremium;
        document.getElementById('displayCoverage').innerText = "$" + coverage.toLocaleString();
        document.getElementById('displayTerm').innerText = term + " Years";
        document.getElementById('displayType').innerText = type;

        // Animate Result
        const placeholder = document.getElementById('resultPlaceholder');
        const container = document.getElementById('resultContainer');

        placeholder.style.opacity = '0';
        setTimeout(() => {
            placeholder.style.display = 'none';
            container.classList.remove('hidden');
            
            // GSAP Entry for Result
            gsap.fromTo(container, 
                { opacity: 0, y: 20 }, 
                { opacity: 1, y: 0, duration: 0.6, ease: "out" }
            );

             // Counter Animation
             gsap.from(document.getElementById('premiumAmount'), {
                textContent: 0,
                duration: 1.5,
                ease: "power1.out",
                snap: { textContent: 1 },
                stagger: 1,
                onUpdate: function() {
                    this.targets()[0].innerHTML = Math.ceil(this.targets()[0].textContent);
                }
             });

        }, 500);
    }
</script>
